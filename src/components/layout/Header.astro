---
import LogoSvg from '@assets/svg/logo.svg?react';
import { siteConfig } from 'constants/site-config';
import Navigator from './Navigator.astro';

const { alternate, title, showLogo } = siteConfig;
---

<div id="site-header" class="shadow-text fixed inset-x-0 top-0 z-10 select-none gap-4 px-5 py-2.5 text-white md:py-2">
  <div class="mx-auto flex max-w-[90vw] items-center justify-between md:w-full md:pr-0 desktop:max-w-8xl">
    <a
      transition:persist="page-header-avatar"
      class="-my-4 mr-4 flex cursor-pointer items-center justify-center gap-1 whitespace-nowrap text-sm font-bold"
      href="/"
      target="_self"
    >
      {
        showLogo ? (
          <LogoSvg className="h-8" />
        ) : (
          <p class="logo-text text-2xl font-light capitalize tracking-widest text-primary">{alternate || title}</p>
        )
      }
    </a>
    <Navigator transition:name="page-header" />
  </div>
</div>
