---
import { HomeSiderType } from '@constants/enum';
import { getLanguageFromUrl } from '@lib/i18n';
import { getTranslations } from '@i18n/index';
import type { SupportedLanguage } from '@types/i18n';

interface Props {
  title: string;
  description?: string;
  siderType?: HomeSiderType;
  lang?: SupportedLanguage;
}

import '@fontsource/poppins';
import '@fontsource/noto-serif-sc';
import '@fontsource/noto-serif-jp';
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from 'astro-loading-indicator/component';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import '@styles/index.css';
import { getSiteConfig } from '@constants/site-config-i18n';
import { Tooltips } from 'astro-tooltips';
import FloatingGroup from '@components/layout/FloatingGroup.astro';
import MobileDrawer from '@components/layout/MobileDrawer.astro';

const { title, description, siderType, lang } = Astro.props;

// 获取当前语言，确保有默认值
const currentLanguage = lang || getLanguageFromUrl(Astro.url) || 'zh-CN';
const translations = getTranslations(currentLanguage);

// 使用多语言站点配置
const siteConfig = getSiteConfig(currentLanguage);

// 使用多语言的元数据
const finalTitle = title || translations.seo.defaultTitle;
const finalDescription = description || translations.seo.defaultDescription;

// 构建多语言的页面标题 (类似原来的seoConfig.title格式)
const pageTitle =
  title ||
  `${siteConfig.alternate ? siteConfig.alternate + ' = ' : ''}${siteConfig.title}${siteConfig.subtitle ? ' = ' + siteConfig.subtitle : ''}`;
const metaDescription = description || siteConfig.description;

// TODO: siderType should be custom in router file, not in layout
---

<!doctype html>
<html transition:name="root" lang={currentLanguage}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ClientRouter />
    <LoadingIndicator color="red" />
    <Tooltips />
    <!-- metadata -->
    <meta name="description" content={metaDescription} />
    <meta name="author" content={siteConfig.author} />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <!-- <meta property="og:image" content="/opengraph.png?v=1" /> TODO: og image-->

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta charset="UTF-8" />

    <link rel="alternate" type="application/rss+xml" title={siteConfig.title} href={`${Astro.site}rss.xml`} />

    <script src="https://cdn.jsdelivr.net/npm/es-toolkit@%5E1"></script>
    <script is:inline>
      // 立即执行主题检查 否则会闪烁
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
        document.documentElement.classList.remove('light');
      } else {
        document.documentElement.classList.remove('dark');
        document.documentElement.classList.add('light');
      }
    </script>
    <script>
      function checkTheme() {
        if (
          localStorage.theme === 'dark' ||
          (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark');
          document.documentElement.classList.remove('light'); // 本来是没有 light 的，这样是为了触发 MutationObserver
        } else {
          document.documentElement.classList.remove('dark');
          document.documentElement.classList.add('light');
        }
      }
      // 在每次页面加载时检查
      document.addEventListener('astro:page-load', checkTheme);
    </script>
  </head>
  <body>
    <div class="flex min-h-screen flex-col text-black dark:text-white">
      <Header />
      <main class="relative flex grow flex-col">{(<slot />)}</main>
      <Footer since={2020} />
      <FloatingGroup />
      <MobileDrawer type={siderType} />
    </div>
  </body>
</html>
