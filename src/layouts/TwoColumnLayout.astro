---
import { cn } from '@lib/utils';

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div class="mb-20 flex flex-col">
  <slot name="cover" />
  <div class={cn('mx-auto md:mx-0 flex w-full items-start justify-center md:w-full desktop:max-w-8xl', className)}>
    <slot name="sider" />
    <div class="flex flex-grow flex-col md:w-full">
      <slot />
    </div>
  </div>
</div>
